using System;

class Program
{
    static void Main(string[] args)
    {
        Console.Write("Informe o valor do investimento: ");
        double valorinvest = Convert.ToDouble(Console.ReadLine());

        Console.Write("Informe a taxa de juros: ");
        double taxajuros = Convert.ToDouble(Console.ReadLine()) / 100;//dividir por 100 pois é porcentagem

        Console.Write("Informe o período em meses: ");
        int meses = Convert.ToInt32(Console.ReadLine());

        double percentualjuros = valorinvest * Math.Pow(1 + taxajuros, meses);
        double rendimento = percentualjuros - valorinvest;

        Console.WriteLine($"Valor inicial do investimento: R${valorinvest:C2}");
        Console.WriteLine($"Taxa de Juros adicionada ao valor: {taxajuros * 100}%");
        Console.WriteLine($"Período mensal: {meses} meses");
        Console.WriteLine($"Rendimento: R${rendimento:C2}");
        Console.WriteLine($"Valor final com juros: R${percentualjuros:C2}");
    }
}
